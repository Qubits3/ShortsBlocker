{
    "manifest_version": 3,
    "name": "Youtube Shorts Blocker",
    "version": "1.0.0",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_icon": "block.png"
    }
}