{
    "manifest_version": 3,
    "name": "Youtube Shorts Blocker",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": "block.png"
    }
}